{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "inseri-core/zenodo",
	"title": "Zenodo Repository",
	"category": "inseri",
	"description": "Load a dataset from Zenodo.org using a DOI and share the dataset with other blocks.",
	"attributes": {
		"blockId": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Choose a file"
		},
		"doi": {
			"type": "string",
			"default": ""
		},
		"files": {
			"type": "array",
			"default": []
		},

		"selectedFile": {
			"type": "string",
			"default": null
		},
		"isVisible": {
			"type": "boolean",
			"default": true
		},
		"metadata": {
			"type": "object",
			"default": {
				"name": ""
			}
		}
	},
	"supports": {
		"html": false,
		"align": true,
		"alignWide": true
	},
	"textdomain": "inseri-core",
	"editorScript": ["file:./index.js", "inseri-core-editor"],
	"viewScript": ["file:./hydration.js"],
	"style": ["file:./index.css"],
	"script": "inseri-core"
}
